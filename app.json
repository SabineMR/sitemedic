{
  "expo": {
    "name": "SiteMedic",
    "slug": "sitemedic",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "sitemedic",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sitemedic.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "SiteMedic uses Face ID for quick secure access"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "SiteMedic needs photo access to document injuries and incidents",
          "cameraPermission": "SiteMedic needs camera access to document injuries and incidents"
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "SiteMedic needs your location to track medic position and log incident locations"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "extraPods": []
          },
          "android": {
            "packagingOptions": {
              "pickFirst": [
                "**/libcrypto.so",
                "**/libssl.so"
              ]
            }
          }
        }
      ]
    ]
  }
}
