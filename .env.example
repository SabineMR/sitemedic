EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
# Web app URL for mobile->web API calls (certification validation)
EXPO_PUBLIC_WEB_APP_URL=http://localhost:30500

# Stripe API Keys (Test Mode)
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Stripe Webhook Secret
# Get from: https://dashboard.stripe.com/test/webhooks (after creating endpoint)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Revenue split defaults (can be overridden per-medic in the medics table)
# Platform takes DEFAULT_PLATFORM_FEE_PERCENT, medic receives DEFAULT_MEDIC_PAYOUT_PERCENT
# Must sum to 100
DEFAULT_PLATFORM_FEE_PERCENT=60
DEFAULT_MEDIC_PAYOUT_PERCENT=40

# Referral payout â€” percentage of booking total paid to the referring party
# Deducted from the platform's share (does NOT affect medic payout)
REFERRAL_PAYOUT_PERCENT=10

# Note: For Supabase Edge Functions, also set these via CLI:
# supabase secrets set STRIPE_SECRET_KEY=sk_test_...
# supabase secrets set STRIPE_PUBLISHABLE_KEY=pk_test_...
# supabase secrets set STRIPE_WEBHOOK_SECRET=whsec_...
# supabase secrets set DEFAULT_PLATFORM_FEE_PERCENT=60
# supabase secrets set DEFAULT_MEDIC_PAYOUT_PERCENT=40
# supabase secrets set REFERRAL_PAYOUT_PERCENT=10
